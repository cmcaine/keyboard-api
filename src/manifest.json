{
  "manifest_version": 2,
  "name": "Keyboard API for Tridactyl",
  "version": "0.1",
  "background" : {
      "scripts": ["main.js"]
  },

  "browser_action": {
      "default_title": "Dummy",
      "browser_style": true
  },
  "experiment_apis": {
    "keyboard": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["keyboard"]],
        "script": "api.js"
      },

      "child": {
        "scopes": ["addon_child"],
        "paths": [["keyboard"]],
        "script": "frame.js"
      }
    }
  },
  "applications": {
      "gecko": {
          "id": "dummy@cmcaine.co.uk"
      }
  }
}
